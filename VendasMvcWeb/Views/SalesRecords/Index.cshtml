@{
    ViewData["Title"] = "Sales Records";
}

<div class="container mt-4">

    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Simple Search</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SimpleSearch">
                        <div class="row mb-3">
                            <label for="minDate" class="col-sm-3 col-form-label">Min Date</label>
                            <div class="col-sm-9">
                                <input type="date" name="minDate" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="maxDate" class="col-sm-3 col-form-label">Max Date</label>
                            <div class="col-sm-9">
                                <input type="date" name="maxDate" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-sm-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Grouping Search</h4>
                </div>
                <div class="card-body">
                    <form asp-action="GroupinSearch">
                        <div class="row mb-3">
                            <label for="minDate" class="col-sm-3 col-form-label">Min Date</label>
                            <div class="col-sm-9">
                                <input type="date" name="minDate" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="maxDate" class="col-sm-3 col-form-label">Max Date</label>
                            <div class="col-sm-9">
                                <input type="date" name="maxDate" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-sm-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4 class="card-title">Results</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Date</th>
                            <th>Seller</th>
                            <th>Department</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center">Perform a search to see the results</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>