@model IEnumerable<VendasMvcWeb.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
    // Pegando as datas do ViewData para preencher o formulário
    var minDate = ViewData["minDate"] as string;
    var maxDate = ViewData["maxDate"] as string;
}

<div class="container mt-4">

    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="card mb-4">
        <div class="card-header">
            <h4>Filter</h4>
        </div>
        <div class="card-body">
            <form class="row align-items-end">
                <div class="col-md-4">
                    <label for="minDate" class="form-label">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value="@minDate" />
                </div>
                <div class="col-md-4">
                    <label for="maxDate" class="form-label">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value="@maxDate" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            @if (Model.Any())
            {
                <h4 class="card-title">Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h4>
            }
            else
            {
                <h4 class="card-title">Results</h4>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="table-dark">
                            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Seller)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Seller.Department)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Amount)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                <td>@Html.DisplayFor(modelItem => item.Seller.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Seller.Department.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>