@model IEnumerable<VendasMvcWeb.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
            <a asp-action="Index" class="btn btn-secondary">Refresh</a>
        </div>
    </div>

    <hr />

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-dark">
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().BirthDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().BaseSalary)
                    </th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a href="mailto:@item.Email" class="text-primary">@item.Email</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BaseSalary)
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary me-2">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-primary me-2">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>