@model IEnumerable<VendasMvcWeb.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    </div>

    <hr />

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary me-2">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-primary me-2">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>